<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<p>
  <strong>Members:</strong>
</p>

<ul>
  <% @beer_club.members.each do |m| %>
    <li><%= link_to m.username, m %></li>
  <% end %>
</ul>

<% if (user = User.find_by id: current_user) && @beer_club.members.exclude?(user) %>
  <h4>join club:</h4>

  <%= form_for(@membership) do |f| %>
    <%= f.hidden_field :beer_club_id %>
    <%= f.submit %>
  <% end %>

  <%= link_to 'Edit', edit_beer_club_path(@beer_club) %> 
<% end %>
<%= link_to 'Back', beer_clubs_path %>
