<h1>Sign in</h1>

<%= form_tag session_path do %>
  <div class="form-group">
    Username: <%= text_field_tag :username, params[:username], class:"form-control" %><br>
  </div>
  <div class="form-group">
    Password: <%= password_field_tag :password, params[:password], class:"form-control" %><br>
  </div>
  <div class="form-group">
    <%= submit_tag "Log in", class: "form-control" %>
  </div>
<% end %>

<%= link_to "Sign in via Github", "auth/github", method: :get, class: "btn btn-success" %>